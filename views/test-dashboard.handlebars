<div class="column" id="create-post">

    <input type="title" class="field" id="new-post-title" placeholder="Post Title"/>
    <textarea type="text" class="field" id="new-post-content" placeholder="Type the content of your post here."></textarea>
    <button class="button" id="create-btn">Create</button>

</div>

<div class="view">

    {{#each posts as |post|}}
        {{> post}}
        {{!-- {{else}}
        <h6>there are currently no posts,  write your first one!</h6> --}}
    {{/each}}

</div>